<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodark_s"
    tools:context=".Pedido">

    <Button
        android:id="@+id/btnOrdenar"
        android:layout_width="260dp"
        android:layout_height="57dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@drawable/laouy_creame_shape"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/btnOrdenar"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lvLista"
        app:layout_constraintStart_toStartOf="@+id/lvLista"
        app:layout_constraintTop_toBottomOf="@+id/lvLista"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvLista"
        android:layout_width="408dp"
        android:layout_height="172dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/raleway_black"
        android:text="@string/Ordene_aqui"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>