<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_s"
    tools:context=".ui.codigo.GalleryFragment">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grafico" />

    <TextView
        android:id="@+id/txtIngresarCodigo"
        style="@style/titlesPD"
        android:layout_width="228dp"
        android:layout_height="89dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/txt_codigo"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/txtIngresarCodigo"
        app:layout_constraintStart_toStartOf="@+id/txtIngresarCodigo"
        app:layout_constraintTop_toBottomOf="@+id/txtIngresarCodigo"
        app:srcCompat="@drawable/grafico" />

    <Button
        android:id="@+id/btn_codigo"
        style="@style/buttonA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_primary_accent"
        android:text="@string/btn_ingresar"
        app:layout_constraintEnd_toEndOf="@+id/edt_codigo"
        app:layout_constraintStart_toStartOf="@+id/edt_codigo"
        app:layout_constraintTop_toBottomOf="@+id/edt_codigo" />

    <EditText
        android:id="@+id/edt_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Escriba aquÃ­"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>