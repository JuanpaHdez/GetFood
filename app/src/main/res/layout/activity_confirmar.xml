<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Confirmar">

    <TextView
        android:id="@+id/txtConfirmar"
        style="@style/sub_titlesPL"
        android:layout_width="242dp"
        android:layout_height="61dp"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:text="@string/confirmarE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContinuar"
        style="@style/buttonA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_primary_accent"
        android:text="@string/btnContinuar"
        app:layout_constraintEnd_toEndOf="@+id/txtConfirmar"
        app:layout_constraintStart_toStartOf="@+id/txtConfirmar"
        app:layout_constraintTop_toBottomOf="@+id/txtConfirmar" />
</androidx.constraintlayout.widget.ConstraintLayout>